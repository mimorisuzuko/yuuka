{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "ES2022",
      "moduleResolution": "Bundler",
      "isolatedModules": true,
      "strict": true,
      "module": "ESNext",
      "outDir": "dist",
      "declaration": true,
      "jsx": "react-jsx",
      "lib": ["es2022", "dom", "dom.iterable"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["dist"]
  }
